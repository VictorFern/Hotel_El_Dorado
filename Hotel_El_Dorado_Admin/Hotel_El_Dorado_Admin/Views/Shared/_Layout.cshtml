<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel_El_Dorado_Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="~/js/functions.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Estilo.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 logo">
                <a asp-controller="Administrador" asp-action="Index" class="logoImagen"><img class="logoImagen" src="~/img/logos.png"></a>
                <h2 id="h2">Hotel El Dorado</h2>
                <span id="h2">Modulo Administrativo</span>
            </div>

            <div class="navbar-collapse cerrar" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                </ul>
                <h4 id="h2" class="welcome"> Bienvenido @ViewBag.nombre</h4> 
                <a asp-controller="Administrador" asp-action="logOut" class="btn btn-dark btnCerrarSeesion">Cerrar sesión</a>
            </div>
        </nav>


    </header>
     <div class="row contenido">
        <div class="col-md-2 menuContenido">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse" id="collapsibleNavbar">
                        <div class="list-group  sidebar">
                            <a asp-controller="Administrador" asp-action="Index" class="text-dark list-group-item list-group-item-action">Home</a>
                            <a asp-controller="Administrador" class="text-dark list-group-item list-group-item-action" data-toggle="collapse" data-target="#modificarPage">Modificar Páginas</a>
                           <div class="collapse" id="modificarPage">
                                <a class="text-dark list-group-item list-group-item-action">Home</a>
                                <a class="text-dark list-group-item list-group-item-action">Sobre Nosotros</a>
                                <a class="text-dark list-group-item list-group-item-action">Facilidaddes</a>
                                <a class="text-dark list-group-item list-group-item-action">Como Llegar</a>
                           </div>                          
                            <a class="text-dark list-group-item list-group-item-action">Listado de reservaciones</a>
                            <a asp-controller="Administrador" asp-action="ConsultarDisponibilidad" class="list-group-item list-group-item-action">Consultar disponibilidad de habitaciones</a>
                            <a asp-controller="Administrador" class="text-dark list-group-item list-group-item-action" data-toggle="collapse" data-target="#habitaciones">Administrar habitaciones</a>    
                            <div class="collapse" id="habitaciones">
                                <a asp-controller="Administrador" asp-action="habitacionStandard" class="text-dark list-group-item list-group-item-action">Standard</a>
                                <a class="text-dark list-group-item list-group-item-action">Junior</a>
                                <a class="text-dark list-group-item list-group-item-action">Suit</a>
                           </div>
                            <a asp-controller="Administrador" asp-action="EstadoActualHabitacion" class="text-dark list-group-item list-group-item-action">Ver estado del hotel hoy</a>
                            <a class="text-dark list-group-item list-group-item-action">Consultar disponibilidad de habitaciones</a>
                            <a class="text-dark list-group-item list-group-item-action">Publicidad</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-md-6">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="containerFooter">
           Copyright&copy;Hotel El Dorado 2022
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
