@model Hotel_El_Dorado_Admin.Models.ReservacionModel

@{
    ViewData["Title"] = "Reservar en Linea";
    Layout = "_Layout";
}
<div class="sobreNosotrosTexto mb-3">
    <h2 class="sobreNosotrosTitulo">Consultar disponibilidad de habitaciones</h2>
</div>
<div class="row">
    <div class="col-md-10 justify-content-center">
       
        <div class="divConsultarDisponibilidad">
            <form>
                <div class="form-row justify-content-between">
                    <div class="form-group">
                        <label class="col-form-label">Fecha de llegada:</label>
                        <input type="date" class="form-control form-control-sm" asp-for="Fecha_Entrada" id="fechaEntradaRD" required href="javascript:;" onchange="" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-group inpuConsultar">
                        <label class="col-form-label">Fecha de Salida:</label>
                        <input type="date" class="form-control form-control-sm" asp-for="Fecha_Salida" id="fechaSalidaRD" required href="javascript:;" onchange="" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-group inpuConsultar">
                        <label class="col-form-label">Tipo de habitación</label>
                            <select class="form-control form-control-sm">
                                <option value="1">Standar</option>
                                <option value="2">Junior</option>
                                <option value="3">Suite</option>
                            </select>
                    </div>
                    
                    <div class="form-group inpuConsultarA">
                        <input type="button" class="btn btn-dark consultar" value="Aceptar" onclick="consultarDisponibilidad(); return false;"/>
                    </div>
                </div>
            </form>
        </div>
        <div class="divWrapper container" id="divWrapper">

        </div>
    </div>
</div>