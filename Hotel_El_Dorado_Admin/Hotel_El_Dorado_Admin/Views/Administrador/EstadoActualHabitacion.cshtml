@{
    ViewData["Title"] = "Estado Actual";
    Layout = "_Layout";
}
<div class="sobreNosotrosTexto mb-3">
    <h2 class="sobreNosotrosTitulo">Estado actual de las habitaciones</h2>
</div>
<div class="row tabla">
    <div class="col-md-4 justify-content-center">
        <div class="container">
            
            <table class="table table-responsive-sm table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th class="text-center"># Habitación</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-center"># Reservación</th>
                        <th class="text-center">Fecha Reservación</th>
                        <th class="text-center">Fecha Entrada</th>
                        <th class="text-center">Fecha Salida</th>
                        <th class="text-center">Estado</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (EstadoDiarioModel estado in ViewBag.ListaEstadoDiario)
                    {

                        @if (estado.Estado.Equals("Ocupado"))
                        {
                            <tr>
                                <td class="text-center">@estado.Habitacion.Numero_Habitacion</td>
                                <td class="text-center">@estado.Habitacion.Nombre_Tipo_Habitacion</td>
                                <td class="text-center">@estado.ID_Reservacion</td>
                                <td class="text-center">@estado.Fecha_Reservacion</td>
                                <td class="text-center">@estado.Fecha_Entrada</td>
                                <td class="text-center">@estado.Fecha_Salida</td>
                                <td class="text-center"><input type="button" value="@estado.Estado" class="btn btn-danger" disabled style="width: 75%;"/></td>
                           
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td class="text-center">@estado.Habitacion.Numero_Habitacion</td>
                                <td class="text-center">@estado.Habitacion.Nombre_Tipo_Habitacion</td>
                                <td class="text-center">@estado.ID_Reservacion</td>
                                <td class="text-center">@estado.Fecha_Reservacion</td>
                                <td class="text-center">@estado.Fecha_Entrada</td>
                                <td class="text-center">@estado.Fecha_Salida</td>
                                <td class="text-center"><input type="button" value="@estado.Estado" class="btn btn-success" disabled style="width: 75%;"/></td>
                            
                            </tr>
                        }


                    }

                </tbody>
            </table>

        </div>

    </div>

</div>