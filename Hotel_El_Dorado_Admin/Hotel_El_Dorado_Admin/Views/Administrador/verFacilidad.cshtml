@model Hotel_El_Dorado_Admin.Models.FacilidadModel

@{
    ViewData["Title"] = "EditarFacilidad";
    Layout = "_Layout";
}

<div class="AdministrarHabitaciónTexto">
    <h2 id="h2">Modificar Facilidad</h2>
</div>
<div class="row">
    <div class="container"><br />
        <form class="form-horizontal">
           
            <div class="form-group col-sm-4 col-md-4">
                <div class="col-sm-4 facilidadInput">
                      <input class="form-control form-control-sm" asp-for="Nombre" type="text" readonly/>  
                 </div>
                  
              </div>

             <div class="form-group">
                   <textarea class="form-control textArea" rows="5" id="Descripcion" name="Descripcion" style="resize:none;">@Model.Descripcion</textarea>
              </div>
              
             
             <div class="form-group col-sm-4 botonesInput">
                 <div class="form-group">
                        <input asp-controller="Administrador" asp-action="actualizarFacilidad" type="submit" value="Aceptar" class="btn btn-primary" />
                        <a asp-controller="Administrador" asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
             </div>
           </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
