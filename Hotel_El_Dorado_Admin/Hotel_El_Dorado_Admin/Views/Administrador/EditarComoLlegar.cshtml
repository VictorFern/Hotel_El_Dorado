@model Hotel_El_Dorado_Admin.Models.HotelModel

@{
    ViewData["Title"] = "EditarComoLlegar";
    Layout = "_Layout";
}

<div class="AdministrarHabitaciónTexto">
    <h2 id="h2">Modificar Como Llegar</h2>
</div>
<div class="row">
    <div class="container"><br />
        <form class="form-horizontal">
           
             <div class="form-group">
                      <textarea class="form-control textArea" rows="5" id="ComoLlegar" name="ComoLlegar" style="resize:none;">@Model.ComoLlegar</textarea>
              </div>
              
             
             <div class="form-group col-sm-4 botonesInput">
                 <div class="form-group">
                        <input asp-controller="Administrador" asp-action="actualizarComoLlegar" type="submit" value="Aceptar" class="btn btn-primary" />
                        <a asp-controller="Administrador" asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
             </div>
           </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
