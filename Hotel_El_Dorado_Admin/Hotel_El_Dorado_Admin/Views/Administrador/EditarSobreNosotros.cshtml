@model Hotel_El_Dorado_Admin.Models.HotelModel

@{
    ViewData["Title"] = "EditarOferta";
    HotelModel t = (HotelModel)ViewData["data"];
    Layout = "_Layout";
}

<h1>EditarOferta</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarOferta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <textarea class="form-control textArea" rows="5" id="SobreNosotros" name="SobreNosotros" style="resize:none;">@Model.SobreNosotros</textarea>
              </div>
            <div class="form-group">
                <input asp-controller="Administrador" asp-action="ActualizarSobreNosotros" type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
