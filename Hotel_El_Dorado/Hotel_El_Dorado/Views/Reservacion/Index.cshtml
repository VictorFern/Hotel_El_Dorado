@model Hotel_El_Dorado.Models.ReservacionModel

@{
    ViewData["Title"] = "Reservar en Linea";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-10 justify-content-center">

        <div class="sobreNosotrosTexto mb-3">
            <h2 class="sobreNosotrosTitulo">Reservar en Linea</h2>
        </div>

        <div class="text-center mb-3" id="alertas">

        </div>
            <form asp-action="Index2" asp-controller="Reservacion" method="post">

                <div class="form-row justify-content-between fechas">

                
                    <div class="form-group">
                        <label class="col-form-label">Fecha de llegada:</label>
                        <input type="date" class="form-control form-control-sm" asp-for="Fecha_Entrada" id="fechaEntrada" required href="javascript:;" onchange="verificarFecha(); return false;" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                    </div>

                
                    <div class="form-group">
                        <label class="col-form-label">Fecha de Salida:</label>
                        <input type="date" class="form-control form-control-sm" asp-for="Fecha_Salida" id="fechaSalida" required href="javascript:;" onchange="verificarFecha(); return false;" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")">
                    </div>
                    <br />
                     <div class="form-group">
                        <input type="number" class="form-control form-control-sm" asp-for="Habitacion.ID_Habitacion" id="idHabitacion" value="" readonly hidden>
                     </div>
                </div>

                <div class="justify-content-between fechas">
                    <select name="tipoHabitacion" asp-for="tipoHabitacion" id="tipoHabitacion" class="col-3 form-control form-control-sm" href="javascript:;" onchange="verificarFecha(); return false;">
                        <option value="0">Tipo de Habitación</option>
                        <option value="1">Standard</option>
                        <option value="2">Junior</option>
                        <option value="3">Suit</option>
                    </select>

                    <div class="text-center mb-3" id="boton">
                        <button type="submit" class="btn btn-primary mt-2" disabled>Siguiente</button>
                    </div>
                </div>
            </form>
    </div>

</div>