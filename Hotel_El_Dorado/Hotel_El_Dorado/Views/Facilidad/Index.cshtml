@{
    ViewData["Title"] = "Facilidad";
    Layout = "_Layout";
}

    <div class="facilidadTexto">
        <h2>Facilidades</h2>
 </div>
        @{
        string[,] data = (string[,]) ViewData["data"];
        }
        
        
         <div class="row">
            @for(int i = 0; i < data.GetLength(0); i++)
            {
               
             <div class="col-md-3">
                 <div class="homeFacilidad">
                     <img class="img-responsive imgFacilidad" src="@data[i, 0]" alt="" width="94" height="94">
                 </div>
                 <br />
            </div>
            <div class="col-md-8 justify-content-center">
                <div class="facilidadTexto">
                    <p>@data[i, 1]</p>
                </div>
                <br />
            </div>
            <br />
            }
    </div>
